@model List<Zero_Hunger.EF.request>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_restLayout.cshtml";
}

@if (TempData["msg"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["msg"]
    </div>
}
<h2>Index</h2>
@{
    if (Model.Count == 0)
    {
        <h1>No Request has been done</h1>
    }
    else
    {
        <table class="table table-bordered">
            <tr>
                <th class="link">ID</th>
                <th>Total Quantity</th>
                <th>Status</th>
            </tr>
            @foreach (var request in Model)
            {
                <tr>
                    <th>@request.id</th>
                    <th>@request.total_quantity</th>
                    <th>@request.status</th>
                    <th><a href="/restaurant/requestdetails/@request.id" class="btn btn-link">Details</a></th>
                </tr>
            }
        </table>
    }
}


